<div class="row justify-content-center">
  <div class="col-12 col-md-9 my-3 p-3">
    <p class="fs-4 mb-0">Welcome to</p>
    <h1><%=@airport.name %></h1>
      <% if @airport.terminal.present? %>
        <h2 class="fs-3"><strong>Terminal <%= @airport.terminal%></strong></h2>
      <% end %>
  </div>
</div>

<div class="row justify-content-center">
  <div class="col-12 col-md-9">
    <div class="flight-information p-3">
      <p class="fs-6 mb-0">Flight number: </p>
      <p class="fs-6 mb-0"> Time until gate opens: </p>
    </div>
  </div>
</div>
