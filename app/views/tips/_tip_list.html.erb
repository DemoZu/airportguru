    <div class="row">
      <% @tips.each do |tip| %>
      <div class="col-12 col-md-4 mb-3">
        <div class="card w-100 h-100 border-0 p-2 shadow-orange">
          <div class="card-header pt-4">
            <p class="category border-0"><span class="d-block category-name rounded px-2 py-1 mb-3"><%= tip.tip_category.name %></span></p>
            <h2 class="fs-5 mb-1"><%= tip.title %></h2>
          </div>
          <div class="card-body py-2">
            <p class="mb-0"><%= tip.content %></p>
          </div>
          <div class="card-footer tip-card-footer py-2 mt-3 text-muted border-0">
            <div class="d-flex justify-content-between align-items-center">
              <div>
                <p class="mb-0">
                  <span class="d-block small">
                    <% if tip.user.photo %>
                    <%= image_tag tip.user.photo, alt: tip.user.nickname, width: 50 %> <%= tip.user.nickname %></small>
                    <% else %>
                    <%= image_tag "https://cdn3.iconfinder.com/data/icons/web-design-and-development-2-6/512/87-1024.png", alt: tip.user.nickname, width: 20 %> <%= tip.user.nickname %></small>
                    <% end %>
                  </span>
                </p>
              </div>
              <div>
              <% if current_user %>
                <div class="d-flex align-items-center">
                  <%= button_to tip_likes_path(tip_id: tip.id, airport_id: @airport.id), class: "like-btn", method: :post do %>
                    <% liked_by_me = tip.likes.find_by(user_id: current_user.id) %>
                    <% if liked_by_me %>
                    <% #if tip.likes.count > 0 %>
                    <i class="fa-solid fa-heart fill"></i>
                    <% else %>
                    <i class="fa-regular fa-heart"></i>
                  <% end %>
                  <% end %>
                  <p class="mb-0"><%= tip.likes.count %> </p>
                </div>
              <% end %>
              </div>
            </div>
          </div>
        </div>
      </div>
      <% end %>
  </div>
